<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signed_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.imac.gab.signedInActivity">

    <include
        android:id="@+id/myToolbar"
        layout="@layout/my_toolbar"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter a Topic to start a group chat!"
        android:ems="10"
        android:layout_below="@+id/myToolbar"
        android:layout_centerHorizontal="true"
        android:id="@+id/getTopic" />

    <ListView
        android:id="@+id/myusers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/startConversation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_marginTop="0dp"
        android:text="Start Conversation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/startConversation"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:background="#EDEDF4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textMultiLine"
        android:hint="Add a Description"
        android:ems="10"
        android:padding="0dp"
        android:id="@+id/description"
        android:layout_below="@+id/getTopic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />


</RelativeLayout>
